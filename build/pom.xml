<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.basepom</groupId>
        <artifactId>basepom-oss</artifactId>
        <version>30</version>
    </parent>
    <groupId>io.integration</groupId>
    <artifactId>virtualdatabase-image</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <version.narayana>2.1.0</version.narayana>
        <version.opentracing>1.0.1</version.opentracing>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.teiid</groupId>
            <artifactId>teiid-spring-boot-starter</artifactId>
            <version>${teiid.springboot.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
            <version>${springboot.version}</version>
        </dependency>
        <dependency>
            <groupId>io.opentracing.contrib</groupId>
            <artifactId>opentracing-spring-jaeger-web-starter</artifactId>
            <version>${version.opentracing}</version>
        </dependency>
        <dependency>
            <groupId>me.snowdrop</groupId>
            <artifactId>narayana-spring-boot-starter</artifactId>
            <version>${version.narayana}</version>
        </dependency>
        <dependency>
            <groupId>org.teiid</groupId>
            <artifactId>spring-keycloak</artifactId>
            <version>${teiid.springboot.version}</version>
        </dependency>
        <dependency>
            <groupId>org.teiid</groupId>
            <artifactId>spring-openapi</artifactId>
            <version>${teiid.springboot.version}</version>
        </dependency>
        <dependency>
            <groupId>org.teiid</groupId>
            <artifactId>spring-odata</artifactId>
            <version>${teiid.springboot.version}</version>
        </dependency>
        <dependency>
            <groupId>org.teiid</groupId>
            <artifactId>spring-data-util</artifactId>
            <version>${teiid.springboot.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${springboot.version}</version>
                <executions>
                    <execution>
                        <id>repackage</id>
                        <phase>package</phase>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <artifactItems></artifactItems>
                        </configuration>
                    </execution>
                </executions>
                <dependencies></dependencies>
            </plugin>
            <plugin>
                <groupId>org.teiid</groupId>
                <artifactId>vdb-codegen-plugin</artifactId>
                <version>${teiid.springboot.version}</version>
                <executions>
                    <execution>
                        <id>codegen</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>vdb-codegen</goal>
                        </goals>
                        <configuration>
                            <vdbFile>src/main/resources/teiid.ddl</vdbFile>
                            <vdbVersion>0</vdbVersion>
                            <materializationType>infinispan-hotrod</materializationType>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>